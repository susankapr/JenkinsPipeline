pipeline {
   agent {
      docker { image 'python:3.7.2' }
   //    label 'slave'
   }
   
   stages {
      stage('Hello') {
          steps {
              // sh 'java -version'
              echo "Get working directory"
              sh "pwd"
              sh "python --version"
              sh "pip --version"
              sh "pip install cfn-lint"
              sh "set -s globstar"
              // sh "cfn-lint -f pretty templates/*"
              sh "pip install bash"
              sh "bash -c '\$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)'"
          }
      }
   }
}
