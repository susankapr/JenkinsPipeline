pipeline {
   agent {
      docker { image 'python:3.7.2' }
   //    label 'slave'
   }
   
   stages {
      stage('Hello') {
          steps {
              // sh 'java -version'
              echo "Get working directory"
              bash 'pwd'
              sh 'python --version'
              sh 'pip --version'
              sh 'pip install cfn-lint'
              // sh 'shopt -s globstar'
             sh 'cfn-lint templates/cfn-example2.yml'
          }
      }
   }
}
